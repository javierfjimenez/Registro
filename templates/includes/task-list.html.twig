{% if task|length >= 1 %}

<table>
    <tr>
        <th>Persona</th>
        <th>Prioridad</th>
        <th>Horas Presupuestadas</th>
        <th>Acciones</th>
    </tr>

    {% for persona in persona %}
        <tr>
            <td>{{ persona.name }}</td>

            <td class="button">

                <a href="{{ path('persona_detail',{'id':persona.id}) }}" class="show">Ver</a>

                {% if app.user != null and persona.user.id == app.user.id  %}

                    <a href="{{ path('persona_edit',{'id':persona.id}) }}" class="edit">Editar</a>

                    <a href="{{ path('persona_delete',{'id':persona.id}) }}" class="delete">Borrar</a>

                {% endif %}
            </td>
        </tr>
    {% endfor %}

</table>
    {% else %}
    <strong>No hay Personas registradas por el momento</strong>
{% endif %}
