<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}">
    {% endblock %}
</head>
<body>
{% block header %}
    <div id="header">
        <ul id="menu">

            {% if app.user %}
                <li><a href="{{ path('task') }}">Inicio</a></li>

                <li><a href="{{ path('my_task') }}">Mis Tareas</a></li>

                <li><a href="{{ path('task_new') }}">Crear Tarea</a></li>

                <li class="right"><a href="{{ path('logout') }}">Cerrar Sesi√≥n</a></li>

                <li class="right"><a href="">{{ app.user.name ~ ' ' ~ app.user.lastName }}</a></li>
            {% else %}

                <li><a href="{{ path('login') }}">Login</a></li>
            {% endif %}

        </ul>
    </div>
    <div class="clearfix"></div>

{% endblock %}
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
